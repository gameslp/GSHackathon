generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  JUDGE
  PARTICIPANT
}

enum HackathonType {
  CLASSIFICATION
  REGRESSION
  NLP
  COMPUTER_VISION
  TIME_SERIES
  OTHER
}

model User {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  totpSecret    String   // base32
  totpConfirmed Boolean  @default(false)
  role          Role     @default(PARTICIPANT)

  // Profile fields
  name          String?
  surname       String?
  email         String?  @unique

  teams              Team[]
  organizedHackathon Hackathon[]
  surveyResponses    SurveyResponse[]
  judgeAssignments   HackathonJudge[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Hackathon {
  id          Int      @id @default(autoincrement())
  title       String
  description String   @db.Text
  rules       String   @db.Text
  organizerId Int
  type        HackathonType
  prize       Int
  thumbnailUrl String?

  teams          Team[]
  teamMax        Int
  teamMin        Int

  submissions    Submission[]
  surveyQuestions SurveyQuestion[]
  submissionFileFormats SubmissionFileFormat[]
  providedFiles  ProvidedFile[]
  judgeAssignments HackathonJudge[]

  registrationOpen  DateTime
  registrationClose DateTime
  startDate         DateTime
  endDate           DateTime

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  organizer   User     @relation(fields: [organizerId], references: [id])
  resources   HackathonResource[]

  threadLimit Int?
  ramLimit     Int?       // in MB
  submissionTimeout Int? // in seconds
  submissionLimit   Int?
  autoScoringEnabled  Boolean  @default(false)
}

model HackathonResource {
  id          Int      @id @default(autoincrement())
  hackathonId Int
  title       String
  url         String

  hackathon   Hackathon @relation(fields: [hackathonId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Team {
  id             Int      @id @default(autoincrement())
  name           String
  invitationCode String   @unique // 6-digit code
  captainId      Int      // Team captain/creator
  isAccepted     Boolean  @default(false) // Admin acceptance
  hackathon      Hackathon @relation(fields: [hackathonId], references: [id])
  hackathonId    Int

  members        User[]
  surveyResponses SurveyResponse[]
  submissions    Submission[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model SurveyQuestion {
  id          Int      @id @default(autoincrement())
  hackathonId Int
  question    String   @db.Text
  order       Int      // Display order

  hackathon   Hackathon @relation(fields: [hackathonId], references: [id], onDelete: Cascade)
  responses   SurveyResponse[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SurveyResponse {
  id         Int      @id @default(autoincrement())
  questionId Int
  teamId     Int
  userId     Int
  answer     String   @db.Text

  question   SurveyQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  team       Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([questionId, teamId, userId])
}

model ProvidedFile {
  id          Int      @id @default(autoincrement())
  hackathonId Int

  name        String   @default("file.txt")
  title       String
  fileUrl     String
  public      Boolean  @default(false)

  hackathon   Hackathon @relation(fields: [hackathonId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model HackathonJudge {
  id          Int      @id @default(autoincrement())
  hackathonId Int
  judgeId     Int

  hackathon   Hackathon @relation(fields: [hackathonId], references: [id], onDelete: Cascade)
  judge       User      @relation(fields: [judgeId], references: [id], onDelete: Cascade)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([hackathonId, judgeId])
}

model SubmissionFileFormat {
  id          Int      @id @default(autoincrement())
  hackathonId Int
  name        String

  description String   @db.Text
  extension   String
  maxSizeKB   Int
  obligatory   Boolean  @default(false)

  hackathon   Hackathon @relation(fields: [hackathonId], references: [id], onDelete: Cascade)
  submissionFiles SubmissionFile[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Submission {
  id          Int      @id @default(autoincrement())
  teamId      Int
  hackathonId Int

  score       Float?
  scoreComment String?   @db.Text
  scoreManual  Boolean  @default(false)
  scoredAt    DateTime?
  scoreId      Int?

  team        Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  hackathon   Hackathon @relation(fields: [hackathonId], references: [id], onDelete: Cascade)
  files       SubmissionFile[]

  sendAt      DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SubmissionFile {
  id            Int      @id @default(autoincrement())
  submissionId  Int
  fileFormatId  Int
  fileUrl       String

  submission    Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  fileFormat    SubmissionFileFormat @relation(fields: [fileFormatId], references: [id], onDelete: Cascade)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
